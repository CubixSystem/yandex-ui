{
  "extends": "@yandex-lego/configs/configs/tsconfig.dist.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@yandex-lego/components/*": ["./src/*"],
      "@bem-react/*": ["node_modules/@bem-react/*"],
      "react": ["node_modules/@types/react"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": [
    "src/internal/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*tests/**/*",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "src/docs/**/*.ts",
    "src/docs/**/*.tsx",
    "node_modules"
  ]
}
